{
  "name": "claude-transcript-hook",
  "version": "1.0.0",
  "description": "Claude Code hook that uploads transcripts to a Vercel API + MongoDB",
  "type": "module",
  "scripts": {
    "dev": "vercel dev",
    "deploy": "vercel --prod",
    "build": "bun run build:linux && bun run build:mac && bun run build:mac-arm",
    "build:linux": "bun build src/cli.ts --compile --target=bun-linux-x64 --outfile dist/claude-hook-linux-x64",
    "build:mac": "bun build src/cli.ts --compile --target=bun-darwin-x64 --outfile dist/claude-hook-darwin-x64",
    "build:mac-arm": "bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile dist/claude-hook-darwin-arm64"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "mongodb": "^6.3.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@vercel/node": "^3.0.0",
    "typescript": "^5.3.0",
    "vercel": "^33.0.0"
  }
}
